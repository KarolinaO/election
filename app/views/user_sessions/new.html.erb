<div class="row">
<div class="col-md-2">
	<p><i class="fa fa-chevron-left"></i><%= link_to 'Back', users_path %></p>
	<i class="fa fa-lock big-icon"></i>
</div>
<div class="col-md-7">
	<%= form_for @user_session, :html => {:class => 'form-horizontal'}, :as => :user_session, :url => { :action => "create" } do |f| %>
	    <div class="form-group">
	      <%= f.label :login, :class => 'col-sm-2 control-label' %>
				<div class="col-sm-10">
	     		<%= f.text_field :login, :class => 'form-control' %>
				</div>
	    </div>
	    <div class="form-group">
	      <%= f.label :password, :class => 'col-sm-2 control-label' %>
				<div class="col-sm-10">
	    		<%= f.password_field :password, :class => 'form-control' %>
				</div>
	    </div>
	    <div class="form-group">
	      <div class="col-sm-2 text-right">
					<%= f.check_box :remember_me %>
				</div>
				<div class="col-sm-10">
					<%= f.label :remember_me %>
				</div>
	    </div>
	    <div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
	      	<%= f.submit "Zaloguj siÄ™", :class => 'btn btn-ali' %>
				</div>
	    </div>
	<% end %>
</div>
</div>

