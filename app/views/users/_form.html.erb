        </div>
    <% end %>
    <div class="form-group">
      <%= f.label :login, :class => 'col-sm-2 control-label' %> 
			<div class="col-sm-10">
      	<%= f.text_field :login, :class => 'form-control' %>
			</div>
		</div>
    <div class="form-group">
      <%= f.label :name, :class => 'col-sm-2 control-label' %> 
			<div class="col-sm-10">
