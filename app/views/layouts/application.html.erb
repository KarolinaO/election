<!DOCTYPE html>
<html>
<head>
  <title>Election</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	<%= stylesheet_link_tag 'application', 'http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css' %>
	<%= stylesheet_link_tag 'application', 'http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css' %>
	<%= javascript_include_tag 'application', 'http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js' %>
  <%= csrf_meta_tags %>

</head>
<body>
  <div class="container">
		<div class="row">
        
	  
	  <nav class="navbar navbar-default">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#primary-nav">
		    	<span class="sr-only">Toggle navigation</span>
		      <span class="icon-bar"></span>
		      <span class="icon-bar"></span>
		      <span class="icon-bar"></span>
		    </button>
		    <%= link_to "Turbo Projekt Karo", root_path, class: "navbar-brand" %>
		  </div>
			
			<div class="collapse navbar-collapse" id="primary-nav">
				<ul class="nav navbar-nav">
				  <% if current_user %>
						<li class="dropdown">
					  	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Profil <span class="caret"></span></a>
					    	<ul class="dropdown-menu" role="menu">
					         <li><%= link_to "User", users_path %></li>
					         <li><%= link_to "Logout", user_session_path, :method => :delete, :confirm => "Are you sure you want to logout?" %></li>
					         <li><a href="#">Something else here</a></li>
					         <li class="divider"></li>
					         <li><a href="#">Separated link</a></li>
					         <li class="divider"></li>
					         <li><a href="#">One more separated link</a></li>
					        </ul>
					      </li>
				  <% else %>
				      <li><i class="fa fa-user-plus"></i><%= link_to "Zarejestruj się", new_user_path %></li>
				      <li><i class="fa fa-lock"></i><%= link_to "Zaloguj się", :login %></li>
				  <% end %>
				</ul>
			</div>
	  </nav>
    </div>
	<div class="row">
		<div class="col-md-12">
			<div class="messages"></div>
		</div>
	</div>
  <div class="row">
		<div class="col-md-12">
    	<%= yield %>
		</div>
	</div>
 </div>
</body>
</html>
