<h1>Wyniki głosowań</h1>

	<% if current_user.role == 0%>
    <% @votes.each do |vote| %>
      <div class="row">
        <div class="col-md-1">ID: <%= vote.id %></div>
				<div class="col-md-4">Nazwa komitetu: <%= findCommitteeById(vote.committee_id) %></div>
        <div class="col-md-3">Ilość głosów: <%= vote.quantity %></div>
        <div class="col-md-4">ID komitetu: <%= vote.committee_id %></div>
			</div>
    <% end %>
	<% end %>

	<% if current_user.role == 1%>
    <% @votes.each do |vote| %>
      <div class="row">
        <div class="col-md-1">ID: <%= vote.id %></div>
				<div class="col-md-2">Nazwa komitetu: <%= findCommitteeById(vote.committee_id) %></div>
        <div class="col-md-2">Ilość głosów: <%= vote.quantity %></div>
        <div class="col-md-2">ID komitetu: <%= vote.committee_id %></div>
				<div class="col-md-2">Nazwa okręgu: <%= findConstituencyById(vote.constituency_id) %></div>
				<div class="col-md-3">ID okręgu: <%= vote.constituency_id %></div>
			</div>
    <% end %>
	<% end %>
	
