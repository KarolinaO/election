<%= form_for(@committee, :html => { :multipart => true, :class => 'form-horizontal' }) do |f| %>
  <% if @committee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@committee.errors.count, "error") %> prohibited this committee from being saved:</h2>

      <ul>
      <% @committee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


<div class="form-group">
  <%= f.label :name, :class => 'col-sm-2 control-label' %>
	<div class="col-sm-10">
  	<%= f.text_field :name, :class => 'form-control' %>
	</div>
</div>
<div class="form-group">
	<label class="col-sm-2 control-label">Wybierz województwo</label>
	<div class="col-sm-10">
  	<%= f.collection_select :province_ids, Province.order(:name), :id, :name, {}, {multiple: true, :class => 'form-control'} %>
	</div>
</div>
<div class="form-group">
		<label class="col-sm-2 control-label">Avatar</label>
		<div class="col-sm-10">
    	<%= f.file_field :avatar %>
		</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-10">
 		<%= f.submit 'Utwórz', :class => 'btn btn-ali'%>
	</div>
</div>

<% end %>